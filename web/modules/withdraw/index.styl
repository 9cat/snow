#section > .withdraw-bitcoin
    states entry review summary

    .entry, .review, .summary
        border solid 1px #ccc
        background-color #fafafa
        padding 1.5em 6em 2em 2em
        max-width 40em

    .control-label
        max-width 7.5em

    .controls
        margin-left 7.5em + 1.5em

    .amount
        input
            max-width 15em
            width 100%

    .address
        input
            font-size 0.85em
            width 100%
            max-width 20.75em

    .submit
        width 100%
        max-width 15em

    .summary
        .status
            states requested processing completed cancelled updating

#section > .withdraw-email
    .transfer-form, .send-form, .send-confirmed
        border solid 1px #ccc
        background-color #fafafa
        padding 1.5em 6em 2em 2em
        max-width 40em

        .control-label
            max-width 5em

        .controls
            margin-left 6.5em

        .amount
            select
                max-width 6em
                width 100%
            input
                max-width 10em
                width 100%

        .email
            input
                width 100%
                max-width 16.3em

    .send-form, .send-confirmed
        display none

    .actions
        margin-top 2em

        .submit
            width 100%
            max-width 13.7em

