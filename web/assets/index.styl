@import "../node_modules/nib/lib/nib/vendor.styl"
@import "loading.styl"
@import "states.styl"
@import "square.styl"
@import "../modules"

html
    overflow -moz-scrollbars-vertical
    overflow scroll

-animation()
    animation arguments
    -webkit-animation arguments
    -moz-animation arguments

body
    position relative
    padding-top: 60px

// Remove padding when collapsing nav
@media (max-width: 979px)
    body
        padding-top 0px

// Don't show the direct support link when logged in (use Intercom)
body.is-logged-in
    footer
        .support
            display none
